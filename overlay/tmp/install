#!/bin/sh

set -eo pipefail


#======================================================================================================================
# Check for target platform
#======================================================================================================================

[[ -z "${TARGETPLATFORM}" ]] && bcg-error "Target platform not set."


#======================================================================================================================
# Get correct installer for target platform
#======================================================================================================================

case "${TARGETPLATFORM}" in
    "linux/amd64")
        ARCH="amd64"
        ;;
    "linux/arm/v7")
        ARCH="armhf"
        ;;
    "linux/arm64")
        ARCH="aarch64"
        ;;
    *)
esac

[[ -z "${ARCH}" ]] && bcg-error "Unsupported target platform: ${TARGETPLATFORM}."


#======================================================================================================================
# Download and run S6 installer
#======================================================================================================================

cd /tmp

S6_URL="https://github.com/just-containers/s6-overlay/releases/download/v${S6_VERSION}/s6-overlay-${ARCH}-installer"
bcg-echo "Downloading ${S6_URL}..."
wget -O installer ${S6_URL} && chmod +x installer
bcg-done

bcg-echo "Installing S6 v${S6_VERSION}..."
./installer /

[[ -d /etc/s6 ]] && bcg-done || bcg-error "S6 not installed."


#======================================================================================================================
# Upgrade packages and install esh template engine
#======================================================================================================================

bcg-echo "Upgrading packages..."
apk -U upgrade
bcg-done

bcg-echo "Installing esh..."
apk add esh
bcg-done


#======================================================================================================================
# Set timezone
#======================================================================================================================

bcg-tz "Europe/London"
