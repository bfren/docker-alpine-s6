#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Ensure target platform is set.
#======================================================================================================================

[[ -z "${TARGETPLATFORM-}" ]] && bf-error "Target platform not set."


#======================================================================================================================
# Get correct installer for target platform.
#======================================================================================================================

case "${TARGETPLATFORM}" in

    linux/amd64)
        ARCH="amd64"
        ;;

    linux/arm/v7)
        ARCH="armhf"
        ;;

    linux/arm64)
        ARCH="aarch64"
        ;;

    *)
        bf-error "Unsupported target platform: ${TARGETPLATFORM}."
        ;;

esac

bf-debug "Platform architecture ${ARCH}."


#======================================================================================================================
# Get S6 Overlay and esh versions.
#======================================================================================================================

cd /tmp

S6_VERSION=$(cat S6_VERSION)
bf-debug "S6 Overlay version ${S6_VERSION}."

ESH_VERSION=$(cat ESH_VERSION)
bf-debug "esh version ${ESH_VERSION}."


#======================================================================================================================
# Download and install S6 Overlay.
#======================================================================================================================

S6_URL="https://github.com/just-containers/s6-overlay/releases/download/v${S6_VERSION}/s6-overlay-${ARCH}-installer"
bf-echo "Downloading ${S6_URL}..."
wget -O installer ${S6_URL} && chmod +x installer
bf-done

bf-echo "Installing S6 Overlay v${S6_VERSION}..."
./installer /

[[ -d /etc/s6 ]] && bf-done \
    || bf-error "S6 Overlay not installed."


#======================================================================================================================
# Install esh template engine.
#======================================================================================================================

bf-echo "Installing esh v${ESH_VERSION}..."
apk add --no-cache esh=${ESH_VERSION} && bf-done \
    || bf-error "esh not installed."


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"


#======================================================================================================================
# Create bcg directories.
#======================================================================================================================

bf-debug "Creating bcg directories."
mkdir -p /etc/bcg/src
mkdir /etc/bcg/templates
