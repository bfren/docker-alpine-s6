#!/usr/bin/nu

use bf
use bf-s6
bf env load -x

# Run cron parts for a specified directory
def main [
    directory: string   # The cron directory to run
    --quiet (-q)        # Make 'running cron' message debug only
] {
    if $quiet { bf-s6 cron --quiet $directory } else { bf-s6 cron $directory }
}
