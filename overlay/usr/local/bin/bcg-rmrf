#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Safely remove a folder and all its contents (i.e. don't allow 'blank' which deletes everything in /).
#
# Arguments:
#   1   Folder path / file glob to delete
#======================================================================================================================

[[ -z ${1+x} ]] && bcg-error "bcg-rmrf: Cannot remove ''."

bcg-echo "Removing ${1}..."
rm -rf ${1}
bcg-done
