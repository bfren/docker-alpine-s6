#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Forward the contents of a log file to Docker.
#
# Arguments:
#   1   Service name
#   2   Absolute path to log file
#======================================================================================================================

if [ -z "${2}" ] ; then
    _echo "_forward: Path to log file not defined, disabling ${1}"
    _disable "${1}"
    exit 0
fi

_echo "Forwarding ${1}..."

if [[ -e ${2} ]] ; then
    _echo "_forward: ${2}"
    exec tail -F ${2}
else
    SLEEP=5
    _echo "_forward: ${2} not found, sleeping for ${SLEEP}s"
    sleep ${SLEEP}
fi
