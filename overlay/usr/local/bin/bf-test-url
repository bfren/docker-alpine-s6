#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check argument.
#   1   URL to test
#======================================================================================================================

[[ -z "${1-}" ]] && bf-error "You must provide a URL to test." "bf-test-url"
URL=${1}


#======================================================================================================================
# Attempt to load the URL using wget.
#======================================================================================================================

bf-debug "Loading ${URL}." "bf-test-url"
wget --no-verbose --spider --tries=1 "${URL}" || exit 1
