#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check arguments.
#   1   Template file path
#   2   Output file path
#======================================================================================================================

[[ -z "${1-}" ]] && bf-error "You must provide the path to the template file." "bf-esh"
INPUT=${1}

[[ -z "${2-}" ]] && bf-error "You must provide the path to the output file." "bf-esh"
OUTPUT=${2}


#======================================================================================================================
# Ensure template file exists.
#======================================================================================================================

[[ ! -f "${INPUT}" ]] && bf-error "Template file ${INPUT} does not exist." "bf-esh"


#======================================================================================================================
# Generate output file and display any errors.
#======================================================================================================================

RESULT=$(esh -o ${OUTPUT} ${INPUT} 2>&1 > /dev/null || true)
if [ -z "${RESULT}" ] ; then
    bf-debug "${OUTPUT} created." "bf-esh"
else
    bf-error "Error using template ${RESULT}" "bf-esh"
fi
