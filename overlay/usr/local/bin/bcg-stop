#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Stop a supervised service.
#
# Arguments:
#   1   Service name
#======================================================================================================================

[[ -z ${1+x} ]] && bcg-error "bcg-stop: You must supply the name of a service."

SVC=/var/run/s6/services/${1}
[[ ! -e ${SVC} ]] && bcg-error "bcg-stop: Service ${1} does not exist."

bcg-echo "Stopping ${1} service..."
s6-svc -t ${SVC}
bcg-done
