#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check argument.
#   1   URL to test
#======================================================================================================================

[[ -z "${1-}" ]] && bcg-error "You must provide a URL to test." "bcg-test-url"
URL=${1}


#======================================================================================================================
# Attempt to load the URL using wget.
#======================================================================================================================

bcg-debug "Loading ${URL}." "bcg-test-url"
wget --no-verbose --spider --tries=1 "${URL}" || exit 1
