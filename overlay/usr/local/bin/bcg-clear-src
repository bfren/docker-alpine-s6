#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check environment variable.
#======================================================================================================================

[[ -z "${BCG_SRC-}" ]] && bcg-error "BCG_SRC environment variable is not set." "bcg-clear-src"


#======================================================================================================================
# Clear source directory.
#======================================================================================================================

bcg-echo "Clearing ${BCG_SRC}..." "bcg-clear-src"
rm -rf ${BCG_SRC}/*
bcg-done "bcg-clear-src"
