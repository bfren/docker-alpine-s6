#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Echo text in a specified ANSI colour.
#
# Arguments:
#   1   ANSI colour code
#   2   Text to echo
#======================================================================================================================

DATE=$(date '+%Y-%m-%d %H:%M:%S')
NC="\e[39m"
echo -e "[bcg] ${DATE} | ${1}${2}${NC}"
