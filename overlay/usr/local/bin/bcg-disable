#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Disable a supervised service.
#
# Arguments:
#   1   Service name
#======================================================================================================================

[[ -z ${1+x} ]] && bcg-error "bcg-disable: You must supply the name of a service."

SVC=/var/run/s6/services/${1}
[[ ! -e ${SVC} ]] && bcg-error "bcg-disable: Service ${1} does not exist."

bcg-echo "Disabling ${1} service..."
s6-svc -d ${SVC}
bcg-done
