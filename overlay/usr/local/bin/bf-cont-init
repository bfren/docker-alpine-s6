#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Set variables.
#======================================================================================================================

INIT=/etc/bf/cont-init.d


#======================================================================================================================
# Execute initialisation files in alphabetical order.
#======================================================================================================================

for FILE in `s6-ls "${INIT}" 2>/dev/null | s6-sort` ; do
    bf-echo "Running ${FILE}." "bf-cont-init"
    ${INIT}/${FILE}
done
