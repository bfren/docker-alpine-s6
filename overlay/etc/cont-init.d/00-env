#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Set environment variables.
#======================================================================================================================

LIB=/usr/lib/bcg
bf-env "BCG_LIB" "${LIB}"
bf-env "BCG_INC" "${LIB}/inc"

ETC=/etc/bcg
bf-env "BCG_TEMPLATES" "${ETC}/templates"
bf-env "BCG_SRC" "${ETC}/src"

bf-env "CRON_LOG_FILE" "/var/log/cron.log"
bf-env "S6_SERVICES" "/var/run/s6/services"
